    },
    {
      "type": "structured_chunk",
      "name": "tool_request_filter",
      "start_pattern": "\\<\\<\\<\\[[A-Z_]+\\]\\>\\>\\>",
      "end_pattern": "\\<\\<\\<\\[END_[A-Z_]+\\]\\>\\>\\>",
      "action": "replace",
      "replacement": "",
