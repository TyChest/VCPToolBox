      "enabled": true,
      "options": {
        "capture_groups": false,
        "multiline": true,
        "greedy": false,
        "max_chunk_size": 10000,
        "timeout_ms": 5000
      },
      "metadata": {
        "author": "VCP System",
        "version": "1.0.0",
        "tags": ["tool_filter", "streaming", "security", "vcp_protocol", "generic"],
